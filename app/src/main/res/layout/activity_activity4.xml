<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zemoso.zetarget.ZeTargetSampleApp.Activity4">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helloWorldActivity4" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen 5"
        android:id="@+id/button4to5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendToActivity5"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen 3"
        android:id="@+id/button4to3"
        android:layout_alignTop="@+id/button4to5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendToActivity3"
        android:clickable="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/grandTotalValue"
        android:layout_above="@+id/button4to3"
        android:layout_toRightOf="@+id/grandTotalValue"
        android:layout_marginBottom="68dp"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textSize="22sp"
        android:background="#ffffffff"
        android:textColor="#ff030303" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GRAND TOTAL"
        android:id="@+id/textViewGrandTotalText"
        android:layout_above="@+id/grandTotalValue"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:id="@+id/buttonAddToCart"
        android:layout_above="@+id/button4to3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/buttonRemove"
        android:layout_alignTop="@+id/buttonAddToCart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:id="@+id/buttonBuy"
        android:layout_alignTop="@+id/buttonAddToCart"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
