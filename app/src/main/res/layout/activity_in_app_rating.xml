<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:minHeight="180dp"
    android:layout_height="wrap_content"
    tools:context="com.zemoso.zinteract.sdk.InAppMessage"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/title"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_gravity="center|top"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#000"
        android:minHeight="100dp" />
    <!--http://stackoverflow.com/questions/12128331/how-to-change-fontfamily-of-textview-in-android -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ask me later"
        android:id="@+id/ask_later"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="#ccc"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_gravity="bottom" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Don't ask me again"
        android:id="@+id/dont_ask"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="#ccc"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_gravity="bottom" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rate it"
        android:id="@+id/close_button"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/base_button"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_gravity="bottom" />

</LinearLayout>
