<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.zemoso.zetarget.ZeTargetSampleApp.BlankFragment">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userSpecificText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen 3"
        android:id="@+id/button2to3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendToActivity3"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen 1"
        android:id="@+id/button2to1"
        android:layout_alignTop="@+id/button2to3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendToActivity1"
        android:clickable="true" />


</RelativeLayout>
