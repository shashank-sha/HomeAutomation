<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/containerMainActivity"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helloText"/>

    <TextView android:text="@string/visibleTextString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visibleText"
        android:layout_below="@id/helloText" />

    <TextView android:text="@string/hiddenTextString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hiddenText"
        android:visibility="gone"
        android:layout_below="@id/visibleText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen two"
        android:id="@+id/button1to2"
        android:layout_centerVertical="true"
        android:onClick="sendToActivity2"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/showTextMainActivity"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button1to2"
        android:onClick="show"/>


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
