<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/in_app_promo_width"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context="com.zemosolabs.zetarget.user_interfaces.DefaultInAppNotification"
    android:layout_gravity="center"
    android:background="@drawable/white_card_bg">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/img_container_action"
        android:contentDescription="@string/image_name" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_text_default"
        android:id="@+id/title_action"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="14sp"
        android:paddingTop="3dp"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:paddingRight="3dp"
        android:gravity="left"
        android:textColor="#000"
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:paddingEnd="3dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/message_text_default"
        android:layout_gravity="center"
        android:id="@+id/message_action"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textSize="14sp"
        android:gravity="left"
        android:textColor="#000"
        android:background="@color/white"
        android:paddingLeft="6dp"
        android:paddingStart="6dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:paddingEnd="3dp"
        />

    <!--http://stackoverflow.com/questions/12128331/how-to-change-fontfamily-of-textview-in-android -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:paddingTop="2dp"
        android:background="@color/lightgrey" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_button_bg">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dismiss_button_text_default"
            android:id="@+id/dismiss_button_action"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textAlignment="center"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:textColor="@color/greyForButtons"
            android:background="@drawable/white_button_bg"
            android:layout_gravity="bottom"
            android:layout_alignParentRight="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dismiss_button_text_default"
            android:id="@+id/action_button_action"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/greyForButtons"
            android:background="@drawable/white_button_bg"
            android:layout_gravity="bottom"
            android:layout_alignBottom="@+id/dismiss_button_action"
            android:layout_toLeftOf="@+id/dismiss_button_action"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>

    </RelativeLayout>
</LinearLayout>
